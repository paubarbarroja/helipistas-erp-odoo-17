<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="leulit_20201106_1728_form">
            <field name="name">leulit_20201106_1728_form</field>
            <field name="model">leulit.ctrl_combustible</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Ctrl. Combustible">
                    <sheet>
                        <group col="1">
                            <group col="4">
                                <field name="from_punto_otro" invisible="1"/>
                                <field name="to_punto_otro" invisible="1"/>
                                <field name="from_punto" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}"/>
                                <field name="to_punto" options="{'no_create': True, 'no_open': True, 'no_quick_create': True}"/>
                                <field name="from_otros"  invisible="((not from_punto_otro))" />
                                <field name="to_otros"  invisible="((not to_punto_otro))" />
                            </group>
                            <group col="6">
                                <field name="fecha"/>
                                <field name="hora" widget="float_time"/>
                                <field name="tipo"/>
                                <field name="cantidad"/>
                                <field name="totalizador"/>
                            </group>
                            <group>
                                <field name="observaciones"/>
                                <field name="informado_por"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="leulit_20201106_1728_tree">
            <field name="name">leulit_20201106_1728_tree</field>
            <field name="model">leulit.ctrl_combustible</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Ctrl. Combustible" >
                    <field name="fecha"/>
                    <field name="hora" widget="float_time"/>
                    <field name="from_punto"/>
                    <field name="to_punto"/>
                    <field name="cantidad"/>
                    <field name="totalizador"/>
                    <field name="tipo"/>
                    <field name="informado_por"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="leulit_20201106_1728_action">
            <field name="name">Ctrl. Combustible</field>
            <field name="res_model">leulit.ctrl_combustible</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>