<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data> 
        <record model="ir.ui.view" id="view_task_form2_inherited_leulit">
            <field name="name">project.task.form.inherited.leulit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="priority" position="replace"/>
                <field name="project_id" position="attributes">
                <field name="priority" position="replace"/>
                    <attribute name="options">{'no_create_edit': True,'no_create': True}</attribute>
                    <attribute name="required">0</attribute>
                </field>
                <field name="date_deadline" position="attributes">
                    <attribute name="required">0</attribute>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="options">{'no_create_edit': True,'no_create': True}</attribute>
                </field>
                <field name="partner_id" position="attributes">
                    <attribute name="options">{'no_create_edit': True,'no_create': True}</attribute>
                </field>
                <field name="partner_id" position="after">
                    <field name="new_priority"/>
                </field>
                <field name="date_assign" position="after">
                    <field name="date_end"/>
                </field>
                <field name="tag_ids" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>


        <record id="leulit_view_gantt_task" model="ir.ui.view">
            <field name="name">leulit_view_gantt_task</field>
            <field name="model">project.task</field>
            <field name="type">gantt</field>
            <field name="arch" type="xml">
                <gantt string="Tareas" date_stop="date_deadline" date_start="create_date" create="0">
                    <field name="name"/>
                </gantt>
            </field>
        </record>

        <record id="leulit_20231113_1019_tree" model="ir.ui.view">
            <field name="name">leulit_20231113_1019_tree</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree default_order="new_priority desc">
                    <field name="name"/>
                    <field name="user_ids"/>
                    <field name="stage_id"/>
                    <field name="new_priority" widget="priority"/>
                </tree>
            </field>
        </record>

        <record id="leulit_20221220_1522_action" model="ir.actions.act_window">
            <field name="name">Mis Proyectos</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="project.view_project_kanban"/>
        </record>

         <record id="leulit_20230829_1244_action" model="ir.actions.act_window">
            <field name="name">Tareas solicitadas</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="domain">[('create_uid','=',uid),('project_borrador', '=', False)]</field>
            <field name="search_view_id" ref="project.view_task_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tasks found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
        </record>

         <record id="leulit_20230829_1245_action" model="ir.actions.act_window">
            <field name="name">Tareas implicado</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="context">{'search_default_followed_by_me': 1, 'all_task': 0}</field>
            <field name="search_view_id" ref="project.view_task_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tasks found. Let's create one!
                </p><p>
                     To get things done, use activities and status on tasks.<br/>
                    Chat in real time or by email to collaborate efficiently.
                </p>
            </field>
            <field name="domain">[('project_borrador', '=', False)]</field>
        </record>

         <record id="leulit_20250206_1019_action" model="ir.actions.act_window">
            <field name="name">Mis Tareas</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('user_ids', 'in', uid),('project_borrador', '=', False)]</field>
        </record>

         <record id="leulit_20250519_1017_action" model="ir.actions.act_window">
            <field name="name">Todas las tareas</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('project_borrador', '=', False)]</field>
        </record>


    </data>
</odoo>
